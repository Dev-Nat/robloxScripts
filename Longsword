-- https://www.roblox.com/games/6729463491/WORLD-2-Longsword

local StarterGui = game:GetService"StarterGui"
function makePrompt(title,desc)
    StarterGui:SetCore("SendNotification", {
		Title = title;
		Text = desc
	})
end

-- Disable Anti
spawn(function( ... )
    game:GetService("ScriptContext"):SetTimeout(1)

    local mt = getrawmetatable(game)
    setreadonly(mt,false)

    local namecall = mt.__namecall

    mt.__namecall = newcclosure(function(self,...)
        local method = getnamecallmethod()
        local args = {...}

        if method == "Kick" then
            return makePrompt("Anticheat Bypass","my nigga tried to kick yo ass")
        end

        return namecall(self, table.unpack(args))
    end)

end)



local library = loadstring(game:HttpGet(('https://raw.githubusercontent.com/bloodball/-back-ups-for-libs/main/wall%20v3')))()

local w = library:CreateWindow("Sword Reach") -- Creates the window

--local c = w:CreateFolder("Item Teleport") -- Creates the folder(U will put here your buttons,etc)

local d = w:CreateFolder("Sword")

local b = w:CreateFolder("MISC")

local plr = game.Players.LocalPlayer

local genv = getgenv()

genv.SwordReach = 4
genv.EnableReach = false
genv.changeWidth = false

function getTool()
    local char = plr.Character
    if char then
        local tool = plr.Backpack:FindFirstChildOfClass("Tool") or plr.Character:FindFirstChildOfClass("Tool")
        if tool then
            return tool
        end
    end
    return false
end

function changeReach()
    local tool = getTool()
    if tool then
        if changeWidth then
            print(SwordReach)
            tool.Handle.Size = Vector3.new(5,SwordReach,SwordReach)
        else
            tool.Handle.Size = Vector3.new(1,0.8,SwordReach)
        end
    end
end

function highlightTool(bool)
    local tool = getTool()
    if tool then

        if bool == true then
            if not tool.Handle:FindFirstChildOfClass("SelectionBox") then
                local x = Instance.new("SelectionBox",tool.Handle)
                x.Name = "Highlight"
                x.Adornee = tool.Handle
            end
        else
            local x = tool.Handle:FindFirstChildOfClass("SelectionBox")
            if x then
                x:Destroy()
            end
        end

    end
end


d:Slider("Reach",{
    min = 4; -- min value of the slider
    max = 1000; -- max value of the slider
    precise = false; -- max 2 decimals
},function(value)
    SwordReach = value
end)

d:Toggle("Enable reach",function(bool)
    EnableReach = bool
    print(EnableReach)
    spawn(function( ... )
        while EnableReach do
            spawn(function()
                changeReach()
            end)
            wait(1)
        end
    end)
end)

d:Toggle("Highlight tool",function(bool)
    spawn(function( ... )
        highlightTool(bool)
    end)
end)

d:Toggle("Change width",function(bool)
    spawn(function( ... )
        changeWidth = bool
    end)
end)

d:Button("Remove blur",function()
    for i,v in pairs(game:GetService"Lighting":GetChildren()) do
        if v.Name == "DepthOfField" then
            v:Destroy()
        end
    end
end)

b:Slider("Slider",{
    min = 10; -- min value of the slider
    max = 50; -- max value of the slider
    precise = true; -- max 2 decimals
},function(value)
    print(value)
end)

b:Bind("Bind",Enum.KeyCode.C,function() --Default bind
    print("Yes")
end)

b:ColorPicker("ColorPicker",Color3.fromRGB(255,0,0),function(color) --Default color
    print(color)
end)

b:Box("Box","number",function(value) -- "number" or "string"
    print(value)
end)

b:DestroyGui()

--[[
How to refresh a dropdown:
1)Create the dropdown and save it in a variable
local yourvariable = b:Dropdown("Hi",yourtable,function(a)
    print(a)
end)
2)Refresh it using the function
yourvariable:Refresh(yourtable)
How to refresh a label:
1)Create your label and save it in a variable
local yourvariable = b:Label("Pretty Useless NGL",{
    TextSize = 25; -- Self Explaining
    TextColor = Color3.fromRGB(255,255,255);
    BgColor = Color3.fromRGB(69,69,69);
})
2)Refresh it using the function
yourvariable:Refresh("Hello") It will only change the text ofc
]]
